<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%.13t] %level - %logger - [%F:%L %M] - %message%n%xException</pattern>
        </encoder>
    </appender>

    <root level="error">
        <appender-ref ref="STDOUT" />
    </root>

    <!--  Application  -->
    <logger name="json-module" level="INFO" />

</configuration>
